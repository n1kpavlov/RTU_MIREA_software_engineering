@startuml
left to right direction

actor Администратор
actor Преподаватель
actor Ученик
actor Родитель
actor "Система уведомлений" as Уведомления
actor "Система отчетности" as Отчеты

rectangle "Система организации кружков" {
  Администратор -- (Управление учетными записями)
  Администратор -- (Управление кружками)
  Администратор -- (Управление расписанием)

  Преподаватель -- (Управление кружками)
  Преподаватель -- (Управление расписанием)
  Преподаватель -- (Оценка успеваемости)

  Ученик -- (Запись на кружки)
  Ученик -- (Просмотр успеваемости)

  Родитель -- (Запись на кружки)
  Родитель -- (Просмотр успеваемости)

  Уведомления -- (Отправка уведомлений)
  Отчеты -- (Формирование отчетов)

  (Управление учетными записями) ..> (Создать учетную запись) : <<include>>
  (Управление учетными записями) ..> (Редактировать учетную запись) : <<include>>
  (Управление учетными записями) ..> (Удалить учетную запись) : <<include>>
  (Управление учетными записями) ..> (Назначить роль) : <<include>>

  (Управление кружками) ..> (Создать кружок) : <<include>>
  (Управление кружками) ..> (Редактировать кружок) : <<include>>
  (Управление кружками) ..> (Удалить кружок) : <<include>>
  (Управление кружками) ..> (Назначить преподавателя) : <<include>>
  (Управление кружками) ..> (Управление участниками кружка) : <<include>>

  (Управление расписанием) ..> (Создать расписание) : <<include>>
  (Управление расписанием) ..> (Редактировать расписание) : <<include>>
  (Управление расписанием) ..> (Уведомить об изменениях) : <<include>>

  (Запись на кружки) ..> (Просмотреть список кружков) : <<include>>
  (Запись на кружки) ..> (Записаться на кружок) : <<include>>
  (Запись на кружки) ..> (Отменить запись) : <<include>>

  (Оценка успеваемости) ..> (Выставить оценку) : <<include>>
  (Оценка успеваемости) ..> (Просмотреть успеваемость) : <<include>>
  (Оценка успеваемости) ..> (Редактировать оценку) : <<include>>

  (Просмотр успеваемости) ..> (Просмотреть свои оценки) : <<include>>
  (Просмотр успеваемости) ..> (Просмотреть оценки ребенка) : <<include>>

  (Отправка уведомлений) ..> (Отправить уведомление) : <<include>>
  (Отправка уведомлений) ..> (Настроить уведомления) : <<include>>

  (Формирование отчетов) ..> (Сформировать отчет по посещаемости) : <<include>>
  (Формирование отчетов) ..> (Сформировать отчет по успеваемости) : <<include>>
  (Формирование отчетов) ..> (Экспорт отчетов) : <<include>>

  (Аутентификация и авторизация) ..> (Войти в систему) : <<include>>
  (Аутентификация и авторизация) ..> (Выйти из системы) : <<include>>
  (Войти в систему) <.. (Восстановить пароль) : <<extend>>
}

Администратор --> (Аутентификация и авторизация)
Преподаватель --> (Аутентификация и авторизация)
Ученик --> (Аутентификация и авторизация)
Родитель --> (Аутентификация и авторизация)

@enduml